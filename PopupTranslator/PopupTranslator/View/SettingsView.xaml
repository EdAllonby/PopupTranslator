<Window x:Class="PopupTranslator.View.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SettingsView" Height="300" Width="300" KeyDown="SettingsView_OnKeyDown"
        DataContext="{Binding SettingsViewModel, Source={StaticResource ViewModelLocator}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical">
                <Image Source="/PopupTranslator;component/Icons/TranslateLogo.ico"></Image>
                <Label Content="Modifier Keys:" />
                <Label Content="{Binding ModifierKeysPressed}" />
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Label Content="Action Key:" />
                <Label Content="{Binding ActionKeyPressed}" />
            </StackPanel>

        </Grid>

        <Button Grid.Row="2" Height="24" Width="70" Content="OK" HorizontalAlignment="Right" Margin="10"
                Command="{Binding ApplySettingsCommand}" />

    </Grid>
</Window>