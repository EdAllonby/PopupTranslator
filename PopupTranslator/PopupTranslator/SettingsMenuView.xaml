<ContextMenu x:Class="PopupTranslator.SettingsMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:popupTranslator="clr-namespace:PopupTranslator" ItemsSource="{Binding Actions}" Width="300">
    <ContextMenu.DataContext>
        <popupTranslator:SettingsMenuViewModel />
    </ContextMenu.DataContext>

    <ContextMenu.ItemTemplate>
        <DataTemplate>
            <MenuItem Header="{Binding Name}" Command="{Binding Action}" />
        </DataTemplate>
    </ContextMenu.ItemTemplate>
</ContextMenu>